@{
    ViewData["Title"] = "Kategori";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="https://cdn.datatables.net/buttons/3.2.0/css/buttons.dataTables.css" />
<div class="container">
    <div class="page-inner">
        <div class="d-flex align-items-left align-items-md-center flex-column flex-md-row pt-2 pb-4">
            <div>
                <h3 class="fw-bold mb-3">Kategori</h3>
            </div>
            <div class="ms-md-auto py-2 py-md-0">
                <a href="/Category/NewCategory" class="btn btn-primary btn-round">Kategori Ekle</a>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">Basic</h4>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table id="category-datatables" class="display table table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th>Düzenle</th>
                                        <th>Kategori Id</th>
                                        <th>Kategori Adı</th>
                                        <th>Üst Kategori İd</th>
                                        <th>Oluşturma Tarihi</th>
                                        <th>Oluşturan Kullanıcı Id</th>
                                    </tr>
                                </thead>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="updateCategoryModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="false">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Güncelle</h5>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-12 col-lg-6">
                        <input type="hidden" id="categoryId" name="Id" value="0">
                        <div class="form-group">
                            <label for="email2">Kategori Adı</label>
                            <input type="email" class="form-control" id="categoryName" placeholder="Kategori Adı" />
                        </div>
                        <div class="form-group">
                            <label for="categoryList">Üst Kategori Seçiniz</label>
                            <select class="form-select" id="categoryList">
                                <option>Veriler Yükleniyor</option>
                            </select>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" onclick="btnUpdateClick()" id="btnUpdate">Güncelle</button>
            </div>
        </div>
    </div>
</div>
@* <script src="/js/datatables.min.js"></script> *@
<script src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.10.20/js/dataTables.bootstrap.min.js"></script>
<script src="/js/category/category.js"></script>
